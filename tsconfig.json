{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext", 
        "declaration": true, 
        "outDir": "./dist", 
        "strict": true, 
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true, 
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "declarationDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "tests"]
}